<section>

    <figure class="image-preview">
        {{#if src}}<img src="{{ src }}" alt="{{ name }}">{{/if}}
        {{#if caption}}<figcaption>{{ caption }}</figcaption>{{/if}}
    </figure>

    {{!-- Image Source --}}
    {{ formField fields.src value=source.src label="JOURNALENTRYPAGE.ImageSource" input=srcInput localize=true }}

    {{!-- Caption --}}
    {{ formField fields.image.fields.caption value=source.image.caption label="JOURNALENTRYPAGE.ImageCaption"
                 localize=true }}

</section>
