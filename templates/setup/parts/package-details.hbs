{{! -------------------------------------------- }}
{{!   World Details View                         }}
{{! -------------------------------------------- }}

{{#*inline "worlds"}}
<li class="package world" data-package-id="{{package.id}}">
    <div class="status-icons">
        {{#if package.favorite}}
        <i class="favorite fa-solid fa-star" data-tooltip aria-label="{{localize "SETUP.FavoritePackage"}}"></i>
        {{/if}}
        <i class="fa-solid fa-lock"{{#unless package.locked}} hidden{{/unless}}
           data-tooltip aria-label="{{localize "SETUP.LockHint"}}"></i>
    </div>
    <div class="package-thumbnail">
        <img class="thumbnail" src="{{package.thumb}}" loading="lazy">
        <h3 class="package-title">{{package.title}}</h3>
        {{#if package.canPlay}}
        <a class="control play" data-action="worldLaunch" data-tooltip aria-label="{{localize "SETUP.WorldLaunch"}}">
            <i class="fa-light fa-circle-play" inert></i>
        </a>
        {{/if}}
    </div>
    <div class="package-content flexcol">
        <div class="package-description scrollable">{{{package.description}}}</div>
        <footer class="package-footer">
            <div class="tags flexrow left">
                {{#if package.lastPlayedLabel}}
                    <span class="tag flexrow">{{package.lastPlayedLabel}}</span>
                {{/if}}
            </div>
            <div class="tags flexrow right">
            <span class="tag flexrow badge {{package.systemBadge.type}}" data-tooltip-html="{{package.systemBadge.tooltip}}">
                {{#if package.systemBadge.icon}}<i class="{{package.systemBadge.icon}}"></i>{{/if}}
                {{package.systemBadge.label}}
            </span>
                {{> templates/setup/parts/package-tags.hbs package=this}}
            </div>
        </footer>
    </div>
</li>
{{/inline}}

